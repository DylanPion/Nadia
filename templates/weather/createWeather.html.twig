{% extends 'base.html.twig' %}

{% block title %}Création d'une nouvelle Météo
{% endblock %}


{% block body %}

	{% include "_sidebar.html.twig" %}

	<div class="form">
		<div class="form-content">
			<h1>Création d'une nouvelle Météo</h1>
			{{form_start(formView)}}
			{{form_row(formView.weatherYear)}}
			{{form_row(formView.DateOfTheLastDayOfTheYear)}}
			{{form_row(formView.unpaidNumber)}}
			{{form_row(formView.assessmentScale)}}
			{{form_row(formView.retainerPercentage)}}
			{{form_row(formView.LoanStatus) }}
			{{form_row(formView.liquidationDate)}}
			{{form_row(formView.bpiGuarantee)}}
			{{form_row(formView.comment)}}
			{{form_row(formView.amountOfDamage)}}
			{{form_row(formView.Button) }}
			{{form_end(formView)}}
		</div>
	</div>
{% endblock %}
