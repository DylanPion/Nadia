{% extends 'base.html.twig' %}

{% block title %}Créer une nouvelle Convention
{% endblock %}


{% block body %}

	{% include "_sidebar.html.twig" %}

	<div class="form">
		<div class="form-content">
			<h1>Création d'une nouvelle Convention</h1>
			{{form_start(formView)}}
			{{form_row(formView.Number)}}
			{{form_row(formView.cashFund)}}
			{{form_row(formView.amountRequestedForTheAgreement)}}
			{{form_row(formView.Button) }}
			{{form_end(formView)}}
		</div>
	</div>
{% endblock %}
